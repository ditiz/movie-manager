{% extends 'base.html.twig' %}

{% block title %}Chercher un film{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('build/app.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class='search'>
        <div class="wrapper">
            <h1>Chercher un film</h1>

            <form method="post" accept-charset="UTF-8">
                <input type="hidden" name="action" value="/search/movies">
            
                <h3><label for="search">Nom du Film</label></h3>
                <input id="search" type="text" name="search" value="{{ search }}"/>
            
                <input type="submit" value="Chercher"/>
            </form>
        

        {% if results is defined %}
            {{ dump(results) }}

            <table>
                <thead>
                    <th>Poster</th>
                    <th>Titre</th>
                    <th>Film/Série</th>
                    <th>Film à voir</th>
                    <th>Film vu</th>
                </thead>
                <tbody>
                    {% for result in results %}
                        <tr>
                            <td>
                                <img src="{{ result.Poster }}" alt="poster" class='poster'>
                            </td>
                            <td>{{ result.Title }} <br> {{ result.Year }} </td>
                            <td>{{ result.Type }}</td>
                            <td>
                                <label class="container">Three
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </td>
                            <td>
                                <label class="container">Three
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
        </div>
    </div>
{% endblock %}
