{% extends 'base.html.twig' %}

{% block title %}Hello MovieDetailController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class='example-wrapper'>
    <h1>{{ movie.name }}</h1>

    <div>
        <h2>Résumé</h2>
        <p>
            {{ movie.plot }}
        </p>
    </div>

    <div>
        <h2>Acteur</h2>
        <ul>
            {% for actor in movie.actors|split(',') %}
                <li>{{ actor }}</li>
            {% endfor %}
        </ul>
    </div>

    <div>
        <h2>Réalisateur</h2>
        <p>
            {{ movie.director }}
        </p>
    </div>

    <div>
        <h2>Récompense</h2>
        <ul>
            {% for award in movie.awards|split('.') %}
                {% if award %}
                    <li>{{ award }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
